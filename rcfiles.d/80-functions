# my functions

function gp {
  pass=$(gopass ls -f | fzf +m) &&
	gopass -c "$pass"
}

function remote {
    ssh -At "$@" 'tmux atta -t bruce || tmux new -s bruce'
}

function vi {
    echo -e "\033]50;SetProfile=neovim\a"
    nvim $@
    echo -e "\033]50;SetProfile=Default\a"
}

alias vim=vi

function clear_badge {
    printf "\e]1337;SetBadgeFormat=%s\a" $(echo 'Î»' |base64)
}

# vi:ft=zsh

